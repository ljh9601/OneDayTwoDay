<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_register"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.onedaytwoday.RegisterActivity">

    <ImageView
        android:src="@mipmap/ic_launcher"
        android:scaleType="fitCenter"
        android:layout_marginTop="30dp"
        android:scaleX="2"
        android:scaleY="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/imageView" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_gravity="bottom|center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:weightSum="1">

        <Button
            android:background="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="20dp"
            android:text="가입"
            android:id = "@+id/register"
            android:textColor="@color/white"
            android:onClick="onClick"
            android:layout_weight="0.5" />

        <Button
            android:background="@color/cardview_dark_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id = "@+id/back"
            android:layout_weight="0.5"
            android:textColor="@color/white"
            android:text="뒤로"
            android:onClick="onClick"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:textColorHint="@color/aluminum"
            android:hint="이름"
            android:id = "@+id/name"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@color/dark"
            android:background="@color/white"
            android:inputType="text"
            android:textColor="@color/black"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/aluminum"
            android:hint="아이디"
            android:id = "@+id/input_id"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@color/dark"
            android:inputType="text"
            android:textColor="@color/black"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/aluminum"
            android:hint="비밀번호"
            android:id = "@+id/input_password"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@color/dark"
            android:inputType="text"
            android:textColor="@color/black"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/aluminum"
            android:hint="비밀번호 확인"
            android:id = "@+id/check_password"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@color/dark"
            android:inputType="text"
            android:textColor="@color/black"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/aluminum"
            android:hint="전화번호('-' 빼고 입력)"
            android:id = "@+id/phone"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@color/dark"
            android:inputType="text"
            android:textColor="@color/black"/>

        <EditText
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:textColorHint="@color/aluminum"
            android:id = "@+id/email"
            android:hint="이메일 주소"
            android:layout_marginBottom="20dp"
            android:textCursorDrawable="@color/dark"
            android:inputType="text"
            android:textColor="@color/black">
        </EditText>

        <android.support.v7.widget.AppCompatButton
            android:layout_width="match_parent"
            android:text="생년월일 선택"
            android:background="@color/buttonPrimary"
            android:id="@+id/pick_birth"
            android:layout_height="wrap_content" />
    </LinearLayout>

</FrameLayout>